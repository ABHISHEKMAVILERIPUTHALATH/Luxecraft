<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div id="cartlist">
        <div class="headder">
            <img id="logo" src="/asset/logo.jpg" alt="">
            <h2>your cart</h2>
        </div>
        <div id="cartitems">
            <% if(locals.cartdata.length != 0){ %>
                <% cartdata.forEach(item=>{%>
            <div>
                    <div>
                        <img src="<%= item.img %>" alt="">
                    </div>
                    <div class="cartlistinfo">
                        <span><%= item.productname %></span>
                        <span><%= item.description %></span>
                        <span>$<%= item.price %></span>
                    </div>
            </div>
            <div class="actionbutton">
                <a href="/cartremove/<%= item.cart_id %>">remove from cart</a>
                <a href="/buy/<%= item.cart_id  %>">buynow</a>
            </div>
              <%  }) %>
                <%  }else{%>
                    <h1 class="cartstatus"> oopppsss !!!!!your cart is empty</h1>
              <%  } %>
        </div>
        
    </div>
</body>
</html>